<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_outline_1"
    app:cardCornerRadius="40dp"
    android:elevation="20dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:id="@+id/rv_carditems"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bt_color_2"
        android:id="@+id/rl_color">



        <TextView
            android:id="@+id/qname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="Brain Brawl!!"
            android:layout_below="@+id/innerCard"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start date - 11/05/24"
            android:textColor="@color/white"
            android:layout_below="@+id/qname"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End date - 11/05/24"
            android:textColor="@color/white"
            android:layout_below="@+id/qname"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:textStyle="italic"
            android:layout_marginTop="25dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>