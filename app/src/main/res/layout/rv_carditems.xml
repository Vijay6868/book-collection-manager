<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_outline_1"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:id="@+id/rv_carditems"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_outline_1"
        android:id="@+id/rl_color">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_book"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/ic_book"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:layout_toRightOf="@+id/ic_book"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="24sp"
            android:fontFamily="@font/inter"
            android:id="@+id/tv_bookTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:layout_toRightOf="@+id/ic_book"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_below="@+id/tv_bookTitle"
            android:fontFamily="@font/inter"
            android:id="@+id/tv_bookGenre"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>